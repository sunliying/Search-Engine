<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CreateIndexServlet</servlet-name>
    <servlet-class>com.tracul.index.CreateIndexServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.tracul.search.SearchServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>TitleSearchServlet</servlet-name>
    <servlet-class>com.tracul.search.TitleSearchServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>BooleanSearchServlet</servlet-name>
    <servlet-class>com.tracul.search.BooleanSearchServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>TitleBooleanSearchServlet</servlet-name>
    <servlet-class>com.tracul.search.TitleBooleanSearchServlet</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>CreateIndexServlet</servlet-name>
    <url-pattern>/CreateIndexServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/SearchServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TitleSearchServlet</servlet-name>
    <url-pattern>/TitleSearchServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BooleanSearchServlet</servlet-name>
    <url-pattern>/BooleanSearchServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TitleBooleanSearchServlet</servlet-name>
    <url-pattern>/TitleBooleanSearchServlet</url-pattern>
  </servlet-mapping>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
